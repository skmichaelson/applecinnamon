<!-- Resume modal -->

<section id="resume" class="group">
  <section class="modal">
    <article class="modal-box">
      <span class="modal-close-button"><a href="#close_resume">&times;</a></span>

      <div id="my-resume">
        <object src="/assets/MichaelsonResume.pdf" type="application/pdf" width="100%" height="100%"></object>
      </div>
    </article>
  </section>
</section>

<!-- End of resume -->

<section id="header" class="group">
  <!-- <h1>Insert Icon Here</h1> -->
  <ul class="group">
    <li><%= link_to "Email", "mailto:Sarah.Michaelson@gmail.com" %></li>
    <li><%= link_to "Github", "https://github.com/skmichaelson" %></li>
    <li><%= link_to "LinkedIn", "http://www.linkedin.com/in/skmichaelson" %></li>
    <li><%= link_to "Resume", "#resume" %></li>
  </ul>
</section>

<main class="group">

<!-- Sidebar -->

<style>
  #sidebar {
    margin: 0px;
    width: 210px;
    background-color: #AEC9A1;
    color: #111;
    padding: 5px 0px;
    border: 1px solid #555;
    position: absolute;
    top: 15px;
    left: 20px;
    z-index: 2;
  }

  #sidebar li > a {
    border-bottom: 1px solid black;
    padding: 10px 5px;
    margin: 0px 5px;
    display: block;
    color: black;
  }

  #sidebar li > a:hover {
    background-color: #8FA883
  }

  #florish {
    width: 230px;
    float: left;
    position: relative;
  }

  #name-position {
    display: block;
    width: 200px;
    height: 100px;
    border: 1px solid black;
    margin: 0px auto;
    background-color: #eee;
    position: relative;
  }

  .profile-info h1 > a {
    display: block;
    padding: 10px;
    color: black;
  }

  .profile-info h1 > a:hover {
    background-color: #8FA883
  }

  .profile-info {
    width: 530px;
    float: right;
    margin-bottom: 20px;
    background-color: #AEC9A1;
    color: #111;
    height: 300px;
  }

  #caption-top {
    top: 0;
    left: 5px;
    position: absolute;
    color: white;
    font-size: 20px;
  }

  #caption-bottom {
    bottom: 5px;
    right: 5px;
    position: absolute;
    color: white;
  }
  </style>

  <div id="florish" class="group">
    <%= image_tag 'paisley.png' %>
    <section id="sidebar">
      <div id="name-position">
        <%= image_tag 'parkbench.jpg' %>

        <div id="caption-top">
          Sarah K Michaelson
        </div>

        <div id="caption-bottom">
          Web Developer
        </div>
      </div>

      <ul class="group">
        <li><%= link_to "About Me", "#about_me" %></li>
        <li><%= link_to "Projects", "#projects" %></li>
        <li><%= link_to "Resume", "#resume" %></li>
        <li><%= link_to "Contact", "#contact" %></li>
      </ul>
    </section>
  </div>

  <section class="group profile-info" id="display">
  </section>
<!-- Footer -->

</main>

